{
    "extends": "@tsconfig/node18/tsconfig.json",
  
    "compilerOptions": {
      "allowJs": true,
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "noImplicitAny": false,
      "outDir": "dist",
      "strict": false,
      "strictNullChecks": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "rootDirs": ["src"],
      "paths": {
        "@/*": ["src/*", "dist/*"]
      }
    },
  
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  